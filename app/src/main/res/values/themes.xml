<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.SweetHouse" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.SweetHouse" parent="Base.Theme.SweetHouse" />

    <style name="input">
        <item name="android:fontFamily">@font/anja</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:layout_marginHorizontal">@dimen/_20sdp</item>
        <item name="android:drawablePadding">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/white</item>
<!--        <item name="android:drawableTint">@color/black</item>-->
    </style>

    <style name="button">
        <item name="android:fontFamily">@font/anja</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">@dimen/_60sdp</item>
        <item name="android:padding">@dimen/_10sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/custum_button</item>
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="sign_in_bottom">
        <item name="android:fontFamily">@font/anja</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="nav_item">
        <item name="android:layout_width">@dimen/_20sdp</item>
        <item name="android:layout_height">@dimen/_20sdp</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>