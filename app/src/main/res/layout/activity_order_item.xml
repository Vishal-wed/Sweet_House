<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".order_item"
    android:orientation="vertical"
    android:background="@color/home_search">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/card_color2"
                android:padding="@dimen/_3sdp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/signika"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:id="@+id/date"
                    android:textColor="@color/white"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/signika"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:layout_alignParentEnd="true"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:id="@+id/time"
                    android:textColor="@color/white"/>

            </RelativeLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/status_img"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/status_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:gravity="center"
                        android:fontFamily="@font/signika"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/signika"
                        android:text="Order ID"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginEnd="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/signika"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginEnd="@dimen/_8sdp"/>

                    <TextView
                        android:gravity="end"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:fontFamily="@font/signika"
                        android:textColor="@color/black"
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sdp"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_3sdp"
                android:background="@color/home_search">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_15sdp"
                    android:fontFamily="@font/signika"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textStyle="bold"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:id="@+id/payment_type"
                    android:textColor="@color/black"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/signika"
                        android:text="Total Amount"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginEnd="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/amount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:textSize="@dimen/_15sdp"
                        android:fontFamily="@font/signika"
                        android:textColor="@color/black"
                        android:gravity="end"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:layout_marginBottom="@dimen/_5sdp"/>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Order Item List"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginVertical="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/signika"/>

                <Button
                    android:id="@+id/cancel_order"
                    android:visibility="gone"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:background="@drawable/cancel_custom"
                    app:backgroundTint="@null"
                    android:text="Cancel"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>

            </RelativeLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/item_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>

</LinearLayout>